<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.action.extension" value=",html" />

	<package name="default" namespace="" extends="struts-default">
		<interceptors>
			<interceptor name="authoriztion" class="paulenka.aleh.wordbook.interceptor.AuthorizationInterceptor" />

			<interceptor-stack name="wordbookStack">
				<interceptor-ref name="authoriztion" />
				<interceptor-ref name="defaultStack" />
			</interceptor-stack>
		</interceptors>

		<default-interceptor-ref name="wordbookStack"></default-interceptor-ref>

		<global-results>
			<result name="login" type="redirect">/user/login?redirectUri=${redirectUri}</result>
		</global-results>
	</package>

	<package name="root" namespace="/" extends="default">
		<action name="">
			<result>/jsp/index.jsp</result>
		</action>
	</package>

	<package name="locale" namespace="/locale" extends="default">
		<action name="change-locale" class="paulenka.aleh.wordbook.action.locale.ChangeLocaleAction">
			<result name="success" type="redirect">${redirectUri}</result>
		</action>
	</package>

	<package name="user" namespace="/user" extends="default">
		<action name="login" class="paulenka.aleh.wordbook.action.user.LoginUserAction">
			<result name="success" type="redirect">${redirectUri}</result>
			<result name="input">/jsp/user/login.jsp</result>
		</action>
		<action name="register" class="paulenka.aleh.wordbook.action.user.RegisterUserAction">
			<result name="success" type="redirect">/</result>
			<result name="input">/jsp/user/register.jsp</result>
		</action>
		<action name="logout" class="paulenka.aleh.wordbook.action.user.LogoutUserAction">
			<result name="success" type="redirect">${redirectUri}</result>
		</action>

		<action name="list" class="paulenka.aleh.wordbook.action.user.ListUserAction">
			<result name="success">/jsp/user/list.jsp</result>
		</action>
	</package>
</struts>